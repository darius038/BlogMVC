@model IEnumerable<Post>
@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container pb50">
    <div class="row mt-5">
        <div class="col-md-2 mt-3">
            <h5 class="mt-3">Admin panel</h5>
            <hr />
            <a asp-controller="AdminPanel" asp-action="Edit">
                New Post
            </a>
            <hr />
            <a asp-controller="Category" asp-action="Index">
                Post categories
            </a>
        </div>
        <div class="col-md-10 mt-3">
            <h4 class="mt-3">Blog posts list</h4>
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tags)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Created)
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tags)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>
                            <td>
                                <a asp-controller="AdminPanel" asp-action="Edit" asp-route-id="@item.Id">
                                    Edit
                                </a> |
                                <a asp-controller="AdminPanel" asp-action="Remove" asp-route-id="@item.Id">
                                    Remove
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

